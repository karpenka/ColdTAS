  AT (0, 0, 0.1) RELATIVE PREVIOUS
EXTEND
%{
     if (!SCATTERED) ABSORB;
%}

/* ******************************* Analyser  *************************************/
/*
COMPONENT monit_analyz = Monitor_nD(
    xwidth = 0.25, yheight = 0.25, filename = "analyz", options="lambda limits=[2.8 3.3]",bins=20)
